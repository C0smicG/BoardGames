<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TicTacToe.TicTacToeController">
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="TOP_LEFT">
           <children>
           <GridPane fx:id="gameBoard" alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                   <Button fx:id="b1" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" />
                   <Button fx:id="b2" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" />
                   <Button fx:id="b3" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" />
                   <Button fx:id="b4" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.rowIndex="1" />
                   <Button fx:id="b5" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                   <Button fx:id="b6" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                   <Button fx:id="b7" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.rowIndex="2" />
                   <Button fx:id="b8" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                   <Button fx:id="b9" onAction="#handleButtonClicked" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               </children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
           </GridPane>
           </children>
        </VBox>
    </center>
   <top>
      <Label graphicTextGap="0.0" text="Tic Tac Toe" BorderPane.alignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Player One" underline="true" />
                  <Label text="X">
                     <font>
                        <Font size="52.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Player Two" />
                  <Label text="O">
                     <font>
                        <Font size="52.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
